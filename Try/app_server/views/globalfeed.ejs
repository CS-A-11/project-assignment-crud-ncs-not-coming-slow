                                                            <img src='<%= product.ProductDp %>'>
                                                        </div>
                                                        <div class="col-md-6">
                                                            COMMENTS, LIKES, CHAWALS
                                                        </div>
                                                    </div>
                                                    <div class="row">

                                                        <div class="col-md-12 description">
                                                            <h4>
                                                                <%= product.Description %>
                                                            </h4>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <% }) %>

                    </div>
                </section>


            </div>




        </div>


    </div>



</body>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

<script>





   $(document).ready( function() { 

    
    $('#searchbarslot').append('<input type="text" id="search"  class="autocomplete black-text" placeholder="Search.." style="z-index:9999999999999;"><li><a href="/search" class="red-text" style="margin-top:-75px;margin-left:135px;"> <i class="material-icons">search</i> </a></li>').css('display','block');    
    });


$(document).ready(function(){
    $('input.autocomplete').autocomplete({
      data: {
        "Apple": null,
        "Ali": null,
        "Ahmad":null,
        "Microsoft": null,
        "Google": 'https://placehold.it/250x250'
      },
    });
  });
        




    $('ul.tabs .tab').each(function checkActive(item) {
        var $a = $(this).find('a');
        if ($.trim(location.pathname) == $.trim($a.attr('href'))) {
            $('.tabs .active').removeClass("active");
            $.addClass("active");
        }
    });
    

    $(document).ready(function () {
        $('ul.tabs').tabs({
            responsiveThreshold: 1920,
        });

    });

    $('select').material_select();
    var fixmeTop = $('.fixme').offset().top;
    $(window).scroll(function () {
        var currentScroll = $(window).scrollTop();
        if (currentScroll >= fixmeTop - 270) {
            $('.fixme').css({
                position: 'fixed',
                top: '50px',
                left: '0',

            });
        } else {
            $('.fixme').css({
                position: 'static',

            });
        }
    });
</script>

</html>